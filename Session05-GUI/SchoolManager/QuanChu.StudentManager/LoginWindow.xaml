<Window x:Class="QuanChu.StudentManager.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuanChu.StudentManager"
        mc:Ignorable="d"
        Title="LoginWindow" Height="450" Width="800" Background="#000080" WindowStartupLocation="CenterScreen">
    <Grid>
        <Button x:Name="LoginButton" Content="Login" HorizontalAlignment="Left" Height="80" Margin="80,224,0,0" VerticalAlignment="Top" Width="160" 
                Foreground="#ff0000" Background="#90ee90"
                FontSize="20" FontWeight="ExtraBold" 
                Click="LoginButton_Click"/>

    </Grid>
</Window>
